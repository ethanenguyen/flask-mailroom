{% extends 'base.jinja2' %}

{% block subtitle %}Add a new donation{% endblock subtitle %}

{% for message in get_flashed_messages() %}
      <div class=flash>{{ message }}</div>
{% endfor %}

{% block content %}
<form method="POST">
    <label for="name-input">Name:</label><input id="name" type="text" name="name">
    <label for="amount-input">Amount:</label><input id="amount" type="text" name="amount">
    <input type="submit" value="Add Donation">
</form>
{% endblock content %}